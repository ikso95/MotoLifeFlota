<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/opcjonalnyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:text="* Ten etap jest nieobowiÄ…zkowy"
        />


    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/pick_time_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_action_clock"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/opcjonalnyTextView"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/time_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pick_time_button"
        android:visibility="gone"
        />

</RelativeLayout>